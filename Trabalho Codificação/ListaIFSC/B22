#include <stdio.h>

int main() {
    // quest√£o 22 da lista IFSC
    
    float val1, val2, media;

    printf("Digite um numero para val1: ");
    scanf("%f", &val1);
    printf("Digite um numero para val2: ");
    scanf("%f", &val2);
    
