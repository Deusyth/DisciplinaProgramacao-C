#include <stdio.h>

int main() {
    int valor, soma_positivos = 0, qtd_negativos = 0;

    for (int i = 0; i < 50; i++) {
        printf("Digite um valor: ");
        scanf("%d", &valor);

        if (valor >= 0)
            soma_positivos += valor;
        else
            qtd_negativos++;
    }

    printf("Soma dos positivos: %d\n", soma_positivos);
    printf("Quantidade de negativos: %d\n", qtd_negativos);
    return 0;
}
