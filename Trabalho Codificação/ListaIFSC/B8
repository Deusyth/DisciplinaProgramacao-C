#include <stdio.h>

int main() {
    // calcular a area de um triangulo

    float area, base, altura;
    printf("digite o valor da base do triangulo: ");
    scanf("%f", &base);
    printf("digite o valor da altura do triangulo: ");
    scanf("%f", &altura);
    area = (base*altura)/2;
    printf("a area do triangulo Ã©: %.2f", area);
    

    return 0;
}
