#include <stdio.h>

int main() {
    int opcao;

    printf("Menu de vendas:\n");
    printf("1 - Venda a Vista\n2 - Venda a Prazo 30 dias\n3 - Venda a Prazo 60 dias\n");
    printf("4 - Venda a Prazo com 90 dias\n5 - Venda com cartao de debito\n6 - Venda com cartao de credito\n");
    printf("Escolha a opcao: ");
    scanf("%d", &opcao);

    switch(opcao) {
        case 1: printf("Venda a Vista\n"); break;
        case 2: printf("Venda a Prazo 30 dias\n"); break;
        case 3: printf("Venda a Prazo 60 dias\n"); break;
        case 4: printf("Venda a Prazo 90 dias\n"); break;
        case 5: printf("Venda com cartao de debito\n"); break;
        case 6: printf("Venda com cartao de credito\n"); break;
        default: printf("Opcao invalida\n");
    }

    return 0;
}
