#include <stdio.h>

int main() {
    int codigo;
    float n1, n2, n3, media;

    while (1) {
        printf("Digite o codigo do aluno (0 para sair): ");
        scanf("%d", &codigo);
        if (codigo == 0) break;

        printf("Digite as 3 notas do aluno: ");
        scanf("%f %f %f", &n1, &n2, &n3);

        media = (n1 + n2 + n3) / 3.0;

        printf("Codigo: %d, Media: %.2f\n", codigo, media);
    }

    return 0;
}
